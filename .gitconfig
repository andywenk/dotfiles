[user]
	name = Andy Wenk
	email = andy@nms.de
[color]
	diff = auto
	status = auto
	branch = auto
[log]
	date = local
[core]
	excludesfile = /Users/andwen/.gitignore_global
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[alias]
	st = status -sb
	br = branch -av
	di = diff --word-diff
	pu = pull --rebase
	ru = remote update
	ci = commit
        co = checkout
        su = submodule update
        lg = log --graph --format='%cd %C(yellow)%h%C(red bold)%d%Creset%C(cyan) [%cn]%Creset %s' --date=short --abbrev=10
[push]
	default = current
[merge]
	conflictstyle = diff3
